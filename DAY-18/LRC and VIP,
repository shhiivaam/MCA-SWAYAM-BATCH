#include <iostream>
#include <vector>
#include <numeric>
#include <algorithm>
void solve() {
    int n;
    std::cin >> n;
    std::vector<int> a(n);
    std::cin >> a[0];
    bool all_same = true;
    for (int i = 1; i < n; ++i) {
        std::cin >> a[i];
        if (a[i] != a[0]) {
            all_same = false;
        }
    }
    if (all_same) {
        std::cout << "No\n";
        return;
    }
    std::cout << "Yes\n";
    int max_idx = 0;
    for (int i = 1; i < n; ++i) {
        if (a[i] > a[max_idx]) {
            max_idx = i;
        }
    }
    for (int i = 0; i < n; ++i) {
        if (i > 0) {
            std::cout << " ";
        }
        if (i == max_idx) {
            std::cout << 1;
        } else {
            std::cout << 2;
        }
    }
    std::cout << "\n";
}
 
int main() {
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(NULL);
    int t;
    std::cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
